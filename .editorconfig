[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=tab
tab_width=2

[{*.yml,*.yaml,Dockerfile}]
indent_style=space
indent_size=2

[{*.mod,*.dtd,*.ent,*.elt}]
indent_style=space
indent_size=4

[{*.jhm,*.rng,*.wsdl,*.fxml,*.pom,*.xslt,*.jrxml,*.ant,*.xul,*.xsl,*.xsd,*.tld,*.jnlp,*.xml}]
indent_style=space
indent_size=4

[{.babelrc,jest.config,.stylelintrc,.eslintrc,*.bk,*.bowerrc,*.jsb3,*.jsb2,*.graphqlconfig,*.jsontab,*.json}]
indent_style=space
indent_size=2

[{Makefile.*,makefile,Makefile,GNUmakefile,*.mk}]
indent_style=tab
tab_width=4

[*.go]
indent_style=tab
tab_width=4

[{*.mkd,*.markdown,*.md}]
indent_style=space
indent_size=4

